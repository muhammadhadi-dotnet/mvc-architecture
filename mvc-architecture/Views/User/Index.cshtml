@using Microsoft.Extensions.Localization
@model List<User>;
@inject IStringLocalizer<SharedResource> Localizer
@{
}
<div class="row">
    <div class="col-6">
        <h3>@Localizer["User List"]</h3>
    </div>
     <div class="col-6 text-end">
        <a asp-controller="User" asp-action="Create" class="btn btn-primary mb-3">@Localizer["Add User"]</a>
    </div>
    
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Age</th>
                    <th>Address</th>
                    <th>Action</th>
                </tr>
            </thead>
                    <tbody>
                        @foreach (var user in Model)
                        {
                            <tr>
                                <td>@user.Id</td>
                                <td>@user.Name</td>
                                <td>@user.Email</td>
                                <td>@user.Age</td>
                                <td>@user.Address</td>
                                <td>
                                   <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-sm btn-warning">Edit</a>
                                   <form asp-action="Delete" asp-controller="User" method="post" asp-route-id="@user.Id" style="display:inline;">
                                        <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this user?');">Delete</button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
        </table>
    
</div>
